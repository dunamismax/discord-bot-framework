# Discord Bot Framework Environment Variables
# Copy this file to .env and fill in your bot tokens

# =============================================================================
# MTG Card Bot Configuration (Reference Implementation)
# =============================================================================
DISCORD_TOKEN=your_mtg_bot_token_here

# Logging Configuration
LOG_LEVEL=info                    # debug, info, warn, error
JSON_LOGGING=false                # Enable JSON logging for production
DEBUG=false                       # Enable debug features

# Performance Configuration
CACHE_TTL=1h                      # Card cache duration (1h, 30m, etc.)
CACHE_SIZE=1000                   # Max number of cached cards
REQUEST_TIMEOUT=30s               # API request timeout
MAX_RETRIES=3                     # Max API retry attempts

# Bot Configuration
BOT_NAME=mtg-card-bot             # Bot identification
SHUTDOWN_TIMEOUT=30s              # Graceful shutdown timeout

# =============================================================================
# Clippy Bot Configuration (Chaos Engine)
# =============================================================================
# DISCORD_TOKEN=your_clippy_bot_token_here

# Chaos Configuration
RANDOM_RESPONSES=true             # Enable chaotic random responses
RANDOM_INTERVAL=45m               # Average time between random messages (30m-60m range)
RANDOM_MESSAGE_DELAY=3s           # Max delay for responses to user messages

# =============================================================================
# Music Bot Configuration (Legacy - Being Modernized)
# =============================================================================
# MUSIC_DISCORD_TOKEN=your_music_bot_token_here
# MUSIC_DATABASE_URL=music.db       # SQLite database path
# MUSIC_DEBUG=false

# =============================================================================
# Global Settings (Optional)
# =============================================================================
# These can override individual bot settings

# BOT_LOG_LEVEL=INFO              # Global log level override
# BOT_JSON_LOGGING=false          # Global JSON logging override